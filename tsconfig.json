
{
  "include": ["src/**/*"],
  "exclude": ["**/jest.config.ts", "node_modules"],
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}